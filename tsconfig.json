{
  "extends": "./buildconfigs/base.tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "rootDirs": ["src"],
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "composite": true,
  }
}
