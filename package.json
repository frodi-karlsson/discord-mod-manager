{
  "name": "discord-modding-framework",
  "version": "1.0.4",
  "description": "An attempt at a flexible framework for modifying the discord client",
  "main": "dist/app.cjs",
  "scripts": {
    "dev": "npx nodemon",
    "build:clean": "npx rimraf build && npx rimraf dist && npx rimraf release",
    "build:types": "npx tsc src/index.ts --emitDeclarationOnly --declaration --declarationMap --outDir ./dist",
    "build:build": "rollup -c",
    "build": "npm run build:clean && npm run build:types && npm run build:build",
    "serve": "npm run build && npx electron build/app.cjs",
    "release:buildexe": "npx electron-builder -c electron-builder.json -w",
    "release": "npx cross-env-shell IS_ELECTRON=true DEBUG=* \"npm run build\" && npm run release:buildexe",
    "prepublish": "npm run build"
  },
  "author": "Fróði Karlsson <frodikarlsson@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:frodi-karlsson/discord-mod-manager.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@lopatnov/rollup-plugin-uglify": "^2.1.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.8.10",
    "electron": "^27.0.3",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.3.0",
    "rollup-plugin-dts": "^6.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "@electron/asar": "^3.2.7",
    "dotenv": "^16.3.1",
    "download-git-repo": "^3.0.2"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ]
}
